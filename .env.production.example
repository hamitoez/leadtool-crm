# ===========================================
# PRODUCTION ENVIRONMENT VARIABLES
# ===========================================
# Kopiere diese Datei nach .env.production und f端lle die Werte aus
#
# HINWEIS: AI-API-Keys werden jetzt pro Benutzer in den Einstellungen
# konfiguriert und in der Datenbank gespeichert!

# ===========================================
# ERFORDERLICH (Required)
# ===========================================

# Database (Supabase)
# Hole die URL aus: Supabase Dashboard > Settings > Database > Connection string
DATABASE_URL="postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-eu-central-1.pooler.supabase.com:6543/postgres?pgbouncer=true"
DIRECT_URL="postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-eu-central-1.pooler.supabase.com:5432/postgres"

# NextAuth - WICHTIG: Generiere einen neuen Secret!
# Generiere mit: openssl rand -base64 32
AUTH_SECRET="GENERIERE_EINEN_SICHEREN_KEY_MIT_32_ZEICHEN"
NEXTAUTH_URL="https://deine-domain.de"

# ===========================================
# OPTIONAL (f端r erweiterte Features)
# ===========================================

# Redis (nur wenn Scraper genutzt wird)
# Kann auch Upstash Redis sein: https://upstash.com
REDIS_URL=""
REDIS_QUEUE_NAME="extraction-queue"

# Scraper Settings (optional)
SCRAPER_HOST=""
SCRAPER_PORT=""
SELENIUM_HEADLESS="true"
SELENIUM_TIMEOUT="30"
REQUEST_DELAY="0.3"
MAX_CONCURRENT="10"

# Worker Settings
RATE_LIMIT_REQUESTS_PER_SECOND="10.0"
RATE_LIMIT_BURST="20"
HTTP_TIMEOUT="30"
MAX_CONCURRENT_DOMAINS="10"
MAX_CONCURRENT_PAGES_PER_DOMAIN="5"

# LLM Fallback (f端r Scraper)
ENABLE_LLM_FALLBACK="false"
LLM_FALLBACK_ON_LOW_CONFIDENCE="true"
LLM_CONFIDENCE_THRESHOLD="0.5"
MIN_CONFIDENCE_THRESHOLD="0.3"

# Logging
LOG_LEVEL="INFO"
NODE_ENV="production"

# ===========================================
# SICHERHEITS-FEATURES (Security Features)
# ===========================================

# Email Service (Resend)
# Hole den API Key von: https://resend.com/api-keys
RESEND_API_KEY="re_xxxxxxxx"
EMAIL_FROM="Performanty <noreply@deine-domain.de>"

# OAuth - Google
# Erstelle OAuth Credentials: https://console.cloud.google.com/apis/credentials
# Callback URL: https://deine-domain.de/api/auth/callback/google
GOOGLE_CLIENT_ID="xxxxx.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="GOCSPX-xxxxxxxx"

# OAuth - GitHub
# Erstelle OAuth App: https://github.com/settings/developers
# Callback URL: https://deine-domain.de/api/auth/callback/github
GITHUB_CLIENT_ID="Iv1.xxxxxxxx"
GITHUB_CLIENT_SECRET="xxxxxxxx"

# 2FA Encryption (WICHTIG: Generiere einen neuen Key!)
# Generiere mit: openssl rand -hex 32
TOTP_ENCRYPTION_KEY="GENERIERE_EINEN_64_ZEICHEN_HEX_KEY"

# Sentry Error Monitoring
# Erstelle ein Projekt: https://sentry.io
SENTRY_DSN="https://xxx@xxx.ingest.sentry.io/xxx"
NEXT_PUBLIC_SENTRY_DSN="https://xxx@xxx.ingest.sentry.io/xxx"
SENTRY_AUTH_TOKEN="sntrys_xxx"
SENTRY_ORG="deine-org"
SENTRY_PROJECT="performanty"

# App URL (f端r Email Links)
NEXT_PUBLIC_APP_URL="https://deine-domain.de"
