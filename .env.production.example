# ===========================================
# PRODUCTION ENVIRONMENT VARIABLES
# ===========================================
# Kopiere diese Datei nach .env.production und fülle die Werte aus
#
# HINWEIS: AI-API-Keys werden jetzt pro Benutzer in den Einstellungen
# konfiguriert und in der Datenbank gespeichert!

# ===========================================
# ERFORDERLICH (Required)
# ===========================================

# Database (MySQL - Hostinger)
# Format: mysql://USER:PASSWORD@HOST:3306/DATABASE_NAME
DATABASE_URL="mysql://username:password@localhost:3306/leadtool_crm"

# NextAuth - WICHTIG: Generiere einen neuen Secret!
# Generiere mit: openssl rand -base64 32
AUTH_SECRET="GENERIERE_EINEN_SICHEREN_KEY_MIT_32_ZEICHEN"
NEXTAUTH_URL="https://deine-domain.de"

# ===========================================
# OPTIONAL (für erweiterte Features)
# ===========================================

# Redis (nur wenn Scraper genutzt wird)
# Kann auch Upstash Redis sein: https://upstash.com
REDIS_URL=""
REDIS_QUEUE_NAME="extraction-queue"

# Scraper Settings (optional)
SCRAPER_HOST=""
SCRAPER_PORT=""
SELENIUM_HEADLESS="true"
SELENIUM_TIMEOUT="30"
REQUEST_DELAY="0.3"
MAX_CONCURRENT="10"

# Worker Settings
RATE_LIMIT_REQUESTS_PER_SECOND="10.0"
RATE_LIMIT_BURST="20"
HTTP_TIMEOUT="30"
MAX_CONCURRENT_DOMAINS="10"
MAX_CONCURRENT_PAGES_PER_DOMAIN="5"

# LLM Fallback (für Scraper)
ENABLE_LLM_FALLBACK="false"
LLM_FALLBACK_ON_LOW_CONFIDENCE="true"
LLM_CONFIDENCE_THRESHOLD="0.5"
MIN_CONFIDENCE_THRESHOLD="0.3"

# Logging
LOG_LEVEL="INFO"
NODE_ENV="production"
