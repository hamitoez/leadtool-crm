# ===========================================
# PRODUCTION ENVIRONMENT VARIABLES
# ===========================================
# Kopiere diese Datei nach .env.production und fülle die Werte aus

# Database (Supabase)
# Hole die URL aus: Supabase Dashboard > Settings > Database > Connection string
DATABASE_URL="postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-eu-central-1.pooler.supabase.com:6543/postgres?pgbouncer=true"
DIRECT_URL="postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-eu-central-1.pooler.supabase.com:5432/postgres"

# NextAuth - WICHTIG: Generiere einen neuen Secret!
# Generiere mit: openssl rand -base64 32
AUTH_SECRET="GENERIERE_EINEN_SICHEREN_KEY_MIT_32_ZEICHEN"
NEXTAUTH_URL="https://deine-domain.de"

# AI API Keys (optional - für AI Features)
ANTHROPIC_API_KEY=""
OPENAI_API_KEY=""
GOOGLE_API_KEY=""
DEEPSEEK_API_KEY=""

# Anthropic Settings
ANTHROPIC_MODEL="claude-sonnet-4-20250514"
ANTHROPIC_MAX_TOKENS="2000"

# Redis (optional - nur wenn Scraper genutzt wird)
# Kann auch Upstash Redis sein: https://upstash.com
REDIS_URL=""
REDIS_QUEUE_NAME="extraction-queue"

# Scraper Settings (optional)
SCRAPER_HOST=""
SCRAPER_PORT=""
SELENIUM_HEADLESS="true"
SELENIUM_TIMEOUT="30"
REQUEST_DELAY="0.3"
MAX_CONCURRENT="10"

# Worker Settings
RATE_LIMIT_REQUESTS_PER_SECOND="10.0"
RATE_LIMIT_BURST="20"
HTTP_TIMEOUT="30"
MAX_CONCURRENT_DOMAINS="10"
MAX_CONCURRENT_PAGES_PER_DOMAIN="5"

# LLM Fallback
ENABLE_LLM_FALLBACK="false"
LLM_FALLBACK_ON_LOW_CONFIDENCE="true"
LLM_CONFIDENCE_THRESHOLD="0.5"
MIN_CONFIDENCE_THRESHOLD="0.3"

# Logging
LOG_LEVEL="INFO"
NODE_ENV="production"
